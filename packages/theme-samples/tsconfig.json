{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@uifabric/theme-samples/lib/*": [
        "./src/*"
      ],
      "@uifabric/theme-samples": [
        "./src"
      ]
    }
  },
  "include": [
    "src"
  ]
}